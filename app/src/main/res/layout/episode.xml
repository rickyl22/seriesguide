<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    tools:context=".Episodes">

    <TextView
        android:id="@+id/episode_name"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="29dp"
        android:text="The End"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp" />

    <TextView
        android:id="@+id/episode_date"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/episode_name"
        android:layout_alignStart="@+id/episode_name"
        android:layout_alignLeft="@+id/episode_name"
        android:text="Sep 12"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="52dp" />

    <TextView
        android:id="@+id/espisode_desc"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignStart="@+id/episode_name"
        android:layout_alignLeft="@+id/episode_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="85 - DVD 1.0"
        android:textColor="@android:color/darker_gray"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="71dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/episode_name"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/ic_check_black_24dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="36dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/episode_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/episode_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="28dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/episode_date"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="52dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />
</RelativeLayout>